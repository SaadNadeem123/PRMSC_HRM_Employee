<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_top_rounded_white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/title_background_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/leaves_summary"
                    android:textAllCaps="true"
                    android:textColor="@color/app_green"
                    android:textSize="16dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/progress_bar_casual_leaves"
                            style="@style/CircularDeterminateProgressBarAntiClockWise"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_drawable_anticlockwise"
                            android:rotation="90"
                            android:scaleX="-1"
                            tools:progress="60" />

                        <!--<ProgressBar
                            android:id="@+id/progress_bar_casual_leaves"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleX="-1"
                            android:layout_gravity="center"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/circular_progress_bar"
                            android:background="@drawable/circle_shape"
                            style="?android:attr/progressBarStyleHorizontal"/>-->
                        <!--                    android:max="100"-->
                        <!--                    android:progress="65"-->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/casual_leaves" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_casual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="@color/app_green"
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/total_casual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/label_casual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/casual_leaves"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/progress_bar_sick_leaves"
                            style="@style/CircularDeterminateProgressBarAntiClockWise"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_drawable_anticlockwise"
                            android:rotation="90"
                            android:scaleX="-1"
                            tools:progress="60" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sick_leaves" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_sick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="@color/app_green"
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/total_sick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/label_sick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sick_leaves"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/progress_bar_annual_leaves"
                            style="@style/CircularDeterminateProgressBarAntiClockWise"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:indeterminateOnly="false"
                            android:progressDrawable="@drawable/progress_drawable_anticlockwise"
                            android:rotation="90"
                            android:scaleX="-1"
                            tools:progress="60" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="20dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/annual_leaves" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:background="@android:color/transparent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_annual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textAlignment="center"
                                android:textColor="@color/app_green"
                                android:textSize="24dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/total_annual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/label_annual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/annual_leaves"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/title_background_grey">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/upcoming_holidays"
                    android:textAllCaps="true"
                    android:textColor="@color/app_green"
                    android:textSize="16dp" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/recycler_item_holidays" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/title_background_grey"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/checkin_history"
                    android:textAllCaps="true"
                    android:textColor="@color/app_green"
                    android:textSize="16dp" />

                <com.lmkr.prmscemployeeapp.ui.customViews.UnderlineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/view_all"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_text"
                    android:textSize="16dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/recycler_item_checkin_history" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>